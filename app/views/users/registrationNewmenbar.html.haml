.registrationNewmenbar-body
  = render 'shared/userResist-logo-gray'
  .registrationNewmenbar-maincontent
    .registrationNewmenbar-maincontent__contents
      .registrationNewmenbar-maincontent__contents__header
        %h2新規会員登録
      .registrationNewmenbar-maincontent__contents__box
        .registrationNewmenbar-maincontent__contents__box__boxs
          = link_to member_information_input_signups_path, class: "registrationNewmenbar-maincontent__contents__box__boxs__mail" do
            .mailaddress
              .mailaddress__icon
                %i{class: 'far fa-envelope'}
              .mailaddress__text
                メールアドレスで登録する
          = link_to root_path, class: 'registrationNewmenbar-maincontent__contents__box__boxs__facebook' do
            .facebook
              .facebook__icon
                %i{class: 'fab fa-facebook-square'}
              .facebook__text
                Facebookで登録する
          = link_to root_path, class: 'registrationNewmenbar-maincontent__contents__box__boxs__google' do
            .google
              .google__icon
              .google__text
                Googleで登録する
  = render 'shared/copywrite-bottom'



