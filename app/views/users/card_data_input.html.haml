= render 'shared/header'
.mypage-contents
  = render 'shared/sidemenu'
  .mypage-main
    .card-data-input
      .card-data-input__top
        クレジットカード情報入力
      .card-data-input__information
        .card-data-input__information__box
          .card-data-input__information__box__card-number-box
            .card-data-input__information__box__card-number-box__card-number
              カード番号
            .card-data-input__information__box__card-number-box__label-hisu
              必須
          .card-data-input__information__box__text
            %input{type: "text", class: "card-data-input__information__box__text__card-number-input",placeholder: "例）半角数字のみ"}
          .card-data-input__information__box__card-list-box
            .card-data-input__information__box__card-list-box__card-name
              = image_tag "card-visa.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-visa", class: "card-data-input__information__box__card-list-box__card-name__icon-visa", size: "49x20"
              = image_tag "card-master.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-master", class: "card-data-input__information__box__card-list-box__card-name__icon-master", size: "34x20"
              = image_tag "card-saison.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-saison", class: "card-data-input__information__box__card-list-box__card-name__icon-saison", size: "30x20"
              = image_tag "card-jcb.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-jcb", class: "card-data-input__information__box__card-list-box__card-name__icon-jcb", size: "32x20"
              = image_tag "card-american.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-american", class: "card-data-input__information__box__card-list-box__card-name__icon-american", size: "21x20"
              = image_tag "card-dinersclub.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-dinersclub", class: "card-data-input__information__box__card-list-box__card-name__icon-dinersclub", size: "32x20"
              = image_tag "card-discover.svg", id: "card-data-input__information__box__card-list-box__card-name__icon-discover", class: "card-data-input__information__box__card-list-box__card-name__icon-discover", size: "32x20"
